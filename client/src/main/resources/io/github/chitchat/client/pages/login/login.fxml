<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.textfield.CustomPasswordField?>
<?import org.controlsfx.control.textfield.CustomTextField?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import java.net.URL?>
<GridPane alignment="CENTER" vgap="25.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="io.github.chitchat.client.view.pages.login.LoginController"
>
	<columnConstraints>
		<ColumnConstraints />
	</columnConstraints>
	<rowConstraints>
		<RowConstraints />
		<RowConstraints />
		<RowConstraints />
		<RowConstraints />
	</rowConstraints>
	<Label styleClass="h1" text="Login into ChitChat" GridPane.halignment="CENTER" />

	<GridPane id="wrapper" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" vgap="25.0" GridPane.halignment="CENTER" GridPane.rowIndex="1">
		<columnConstraints>
			<ColumnConstraints />
		</columnConstraints>
		<rowConstraints>
			<RowConstraints />
			<RowConstraints />
			<RowConstraints />
		</rowConstraints>

		<CustomTextField fx:id="textFieldUser" prefHeight="60.0" prefWidth="500.0" promptText="Username" styleClass="text-field-primary" GridPane.rowIndex="0">
			<left>
				<FontIcon iconLiteral="fth-user" />
			</left>
		</CustomTextField>
		<CustomPasswordField fx:id="textFieldPassword" prefHeight="60.0" prefWidth="500.0" promptText="Password" styleClass="text-field-primary" GridPane.rowIndex="1">
			<left>
				<FontIcon iconLiteral="fth-lock" />
			</left>
			<right>
				<FontIcon iconLiteral="fth-eye" />
			</right>
		</CustomPasswordField>
		<Button fx:id="buttonLogin" alignment="CENTER" mnemonicParsing="false" onAction="#login" prefHeight="60.0" prefWidth="500.0" styleClass="button-primary" text="Login"
			textAlignment="CENTER" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
	</GridPane>

	<HBox id="createAccount" alignment="CENTER" GridPane.rowIndex="3">
		<Label text="Don't have a Account? Signup" />
		<FontIcon iconLiteral="fth-arrow-right" />
	</HBox>

	<stylesheets>
		<URL value="@login.css" />
	</stylesheets>
</GridPane>
