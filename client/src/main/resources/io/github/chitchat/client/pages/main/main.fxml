<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.*?>

<GridPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.chitchat.client.view.pages.main.MainController">
	<columnConstraints>
		<ColumnConstraints hgrow="ALWAYS" maxWidth="350" />
		<ColumnConstraints hgrow="ALWAYS" />
	</columnConstraints>
	<rowConstraints>
		<RowConstraints vgrow="ALWAYS" maxHeight="80" />
		<RowConstraints vgrow="ALWAYS" />
		<RowConstraints vgrow="ALWAYS" />
		<RowConstraints vgrow="ALWAYS" />
	</rowConstraints>

	<HBox id="headerWrapper" GridPane.columnIndex="1">
		<GridPane alignment="CENTER_LEFT" vgap="10" HBox.hgrow="ALWAYS">
			<columnConstraints>
				<ColumnConstraints hgrow="ALWAYS" />
				<ColumnConstraints hgrow="ALWAYS" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints />
				<RowConstraints />
			</rowConstraints>

			<ImageView fx:id="selectedGroupImage" fitHeight="40" fitWidth="40" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowSpan="2"
				GridPane.valignment="CENTER" />
			<Label text="Group Name" textFill="WHITE" GridPane.columnIndex="1" />
			<Label text="Zuletzt online: Now" textFill="WHITE" GridPane.columnIndex="1" GridPane.rowIndex="1" />
		</GridPane>

		<HBox alignment="CENTER_RIGHT" spacing="15">
			<Button fx:id="callButton" styleClass="button-primary">
				<graphic>
					<FontIcon iconLiteral="fth-phone" />
				</graphic>
			</Button>
			<Button fx:id="callVideoButton" styleClass="button-primary">
				<graphic>
					<FontIcon iconLiteral="fth-video" />
				</graphic>
			</Button>
		</HBox>
	</HBox>

	<ListView fx:id="groupList" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.rowSpan="3" />

	<GridPane GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.rowSpan="3">
		<columnConstraints>
			<ColumnConstraints hgrow="ALWAYS" />
		</columnConstraints>
		<rowConstraints>
			<RowConstraints vgrow="ALWAYS" />
			<RowConstraints vgrow="ALWAYS" maxHeight="80" />
		</rowConstraints>

		<ListView fx:id="messageList" prefHeight="450.0" prefWidth="600.0" />
		<HBox fx:id="inputWrapper" alignment="BOTTOM_LEFT" spacing="15" GridPane.rowIndex="1">
			<TextArea fx:id="inputArea" prefHeight="50.0" prefWidth="600.0" promptText="Type a message..." wrapText="true" />
			<Button fx:id="sendButton" onAction="#sendMessage" styleClass="button-primary" text="Send" />
		</HBox>
	</GridPane>

	<stylesheets>
		<URL value="@main.css" />
	</stylesheets>
</GridPane>
