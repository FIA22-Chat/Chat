<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.*?>
<?import javafx.scene.image.ImageView?>

<GridPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.chitchat.client.view.pages.main.MainController">
	<columnConstraints>
		<ColumnConstraints />
		<ColumnConstraints />
	</columnConstraints>
	<rowConstraints>
		<RowConstraints />
		<RowConstraints />
		<RowConstraints />
		<RowConstraints />
		<RowConstraints />
	</rowConstraints>

	<HBox id="headerWrapper" GridPane.columnIndex="1">
		<GridPane HBox.hgrow="ALWAYS" alignment="CENTER_LEFT" vgap="10">
			<columnConstraints>
				<ColumnConstraints />
				<ColumnConstraints />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints />
				<RowConstraints />
			</rowConstraints>

			<ImageView fx:id="selectedGroupImage" fitWidth="40" fitHeight="40" GridPane.columnIndex="0" GridPane.rowSpan="2" GridPane.halignment="CENTER"
				GridPane.valignment="CENTER" />
			<Label GridPane.columnIndex="1" text="Group Name" textFill="WHITE" />
			<Label GridPane.columnIndex="1" GridPane.rowIndex="1" text="Zuletzt online: Now" textFill="WHITE" />
		</GridPane>

		<HBox alignment="CENTER_RIGHT" spacing="15">
			<Button fx:id="callButton" styleClass="button-primary">
				<graphic>
					<FontIcon iconLiteral="fth-phone" />
				</graphic>
			</Button>
			<Button fx:id="callVideoButton" styleClass="button-primary">
				<graphic>
					<FontIcon iconLiteral="fth-video" />
				</graphic>
			</Button>
		</HBox>
	</HBox>

	<ListView fx:id="groupList" prefWidth="200.0" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.rowSpan="3" />

	<GridPane GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.rowSpan="3">
		<columnConstraints>
			<ColumnConstraints />
		</columnConstraints>
		<rowConstraints>
			<RowConstraints />
			<RowConstraints />
		</rowConstraints>

		<ListView fx:id="messageList" prefHeight="450.0" prefWidth="600.0" />
		<HBox fx:id="inputWrapper" alignment="BOTTOM_LEFT" spacing="15" GridPane.rowIndex="1">
			<TextArea fx:id="inputArea" prefHeight="50.0" prefWidth="600.0" promptText="Type a message..." wrapText="true" />
			<Button fx:id="sendButton" onAction="#sendMessage" styleClass="button-primary" text="Send" />
		</HBox>
	</GridPane>

	<stylesheets>
		<URL value="@main.css" />
	</stylesheets>
</GridPane>
