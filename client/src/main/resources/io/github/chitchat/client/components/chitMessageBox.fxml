<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.image.ImageView?>

<fx:root type="javafx.scene.layout.VBox" fx:id="wrapper" maxWidth="150" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
	<GridPane fx:id="grid" hgap="5.0" VBox.vgrow="SOMETIMES">
		<padding>
			<Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
		</padding>
		<columnConstraints>
			<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
			<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
		</columnConstraints>
		<rowConstraints>
			<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
			<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
		</rowConstraints>

		<VBox GridPane.columnIndex="1" GridPane.columnSpan="2">
			<ImageView fx:id="userImage" fitWidth="20" fitHeight="20" />
			<Label fx:id="userName" text="Name" textOverrun="CLIP" />
		</VBox>
		<HBox id="messageContentWrapper" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="1">
			<Label fx:id="messageContent" text="Nachricht" textOverrun="LEADING_ELLIPSIS" />
		</HBox>

		<stylesheets>
			<URL value="@chitMessageBox.css" />
		</stylesheets>
	</GridPane>
</fx:root>
